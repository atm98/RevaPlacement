        </activity>
        <activity android:name=".Activities.Screen2" />
        <activity android:name=".Activities.LoginScreen" />
        <activity android:name=".Activities.ForgotPasswordScreen" />
        <activity android:name=".Activities.HomeScreen" />
        <activity android:name=".Activities.PlacementEventCardDetailScreen" />
